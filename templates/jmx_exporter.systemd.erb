[Unit]
Description=Prometheus exporter for jmx metrics, written in Go with pluggable metric collectors.
Wants=basic.target
After=basic.target network.target

[Service]
User=<%= scope.lookupvar('prometheus::jmx_exporter::user') %>
Group=<%= scope.lookupvar('prometheus::jmx_exporter::group') %>
ExecStart=<%= scope.lookupvar('prometheus::jmx_exporter::bin_dir') %>/jmx_exporter \
  <%= scope.lookupvar('prometheus::jmx_exporter::extra_options') %>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
