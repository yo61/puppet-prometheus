# Prometheus JMX Exporter (Upstart unit)
description "Prometheus exporter for jmx metrics, written in Go with pluggable metric collectors"
start on runlevel [2345]
stop on runlevel [06]

env JMX_EXPORTER=<%= scope.lookupvar('prometheus::jmx_exporter::bin_dir') %>/jmx_exporter
env USER=<%= scope.lookupvar('prometheus::jmx_exporter::user') %>
env GROUP=<%= scope.lookupvar('prometheus::jmx_exporter::group') %>
env DEFAULTS=/etc/default/jmx_exporter
env RUNDIR=/var/run/jmx_exporter
env PID_FILE=/var/run/jmx_exporter/jmx_exporter.pid
pre-start script
  [ -e $DEFAULTS ] && . $DEFAULTS

  mkdir -p $RUNDIR           || true
  chmod 0750 $RUNDIR         || true
  chown $USER:$GROUP $RUNDIR || true
end script

script
    # read settings like GOMAXPROCS from "/etc/default/jmx_exporter", if available.
    [ -e $DEFAULTS ] && . $DEFAULTS

    export GOMAXPROCS=${GOMAXPROCS:-2}
    exec start-stop-daemon -c $USER -g $GROUP -p $PID_FILE -x $JMX_EXPORTER -S -- <%= scope.lookupvar('prometheus::jmx_exporter::extra_options') %>
end script

respawn
respawn limit 10 10
kill timeout 10
