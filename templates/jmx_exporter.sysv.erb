#!/bin/bash
#
#       /etc/rc.d/init.d/jmx_exporter
#
#       Daemonize the prometheus node jmx exporter
#
# chkconfig:   2345 95 20
# description: Prometheus exporter for jmx metrics, written in Go with pluggable metric collectors.
# processname: jmx_exporter
# pidfile: /var/run/jmx_exporter/pidfile

# Source function library.
. /etc/init.d/functions

DAEMON=<%= scope.lookupvar('prometheus::jmx_exporter::bin_dir') %>/jmx_exporter
PID_FILE=/var/run/jmx_exporter/jmx_exporter.pid
LOG_FILE=/var/log/jmx_exporter

[ -e /etc/sysconfig/jmx_exporter ] && . /etc/sysconfig/jmx_exporter

export GOMAXPROCS=${GOMAXPROCS:-2}

#
# Create the /var/run/jmx_exporter directory, which can live on a tmpfs
# filesystem and be destroyed between reboots.
#
mkrundir() {
        [ ! -d /var/run/jmx_exporter ] && mkdir -p /var/run/jmx_exporter
        chown <%= scope.lookupvar('prometheus::jmx_exporter::user') %> /var/run/jmx_exporter
}

#
# Create a PID file if it doesn't already exist, for clean upgrades
# from previous init-script controlled daemons.
#
KILLPROC_OPT="-p ${PID_FILE}"
mkpidfile() {
        # Create PID file if it didn't exist
        mkrundir
        [ ! -f $PID_FILE ] && pidofproc $DAEMON > $PID_FILE
        chown <%= scope.lookupvar('prometheus::jmx_exporter::user') %> /var/run/jmx_exporter
        if [ $? -ne 0 ] ; then
            rm $PID_FILE
            KILLPROC_OPT=""
        fi
}

start() {
        echo -n "Starting prometheus jmx exporter: "
        mkrundir
        [ -f $PID_FILE ] && rm $PID_FILE
        daemon --user=<%= scope.lookupvar('prometheus::jmx_exporter::user') %> \
            --pidfile="$PID_FILE" \
            "$DAEMON" <%= scope.lookupvar('prometheus::jmx_exporter::extra_options') %> >> "$LOG_FILE" &
        retcode=$?
        mkpidfile
        touch /var/lock/subsys/jmx_exporter
        return $retcode
}

stop() {
        DELAY=5 # seconds maximum to wait for a leave

        echo -n "Shutting down prometheus jmx exporter: "
        mkpidfile

        jmx_exporter_pid=$(cat $PID_FILE)
        killproc $KILLPROC_OPT $DAEMON -INT
        retcode=$?

        # We'll wait if necessary to make sure the leave works, and return
        # early if we can.  If not, escalate to harsher signals.
        try=0
        while [ $try -lt $DELAY ]; do
        if ! checkpid $jmx_exporter_pid ; then
          rm -f /var/lock/subsys/jmx_exporter
          return $retcode
        fi
        sleep 1
          let try+=1
        done

        # If acting as a server, use a SIGTERM to avoid a leave.
        # This behavior is also configurable.  Avoid doing a "leave" because
        # having servers missing is a bad thing that we want to notice.
        #
        # A SIGTERM will mark the node as "failed" until it rejoins.
        # killproc with no arguments uses TERM, then escalates to KILL.
        killproc $KILLPROC_OPT $DAEMON
        retcode=$?

        rm -f /var/lock/subsys/jmx_exporter $PID_FILE
        return $retcode
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status -p ${PID_FILE} $DAEMON
        ;;
    restart)
        stop
        start
        ;;
    reload)
        mkpidfile
        killproc $KILLPROC_OPT $DAEMON -HUP
        ;;
    condrestart)
        [ -f /var/lock/subsys/jmx_exporter ] && restart || :
        ;;
    *)
        echo "Usage: jmx_exporter {start|stop|status|reload|restart}"
        exit 1
        ;;
esac
retcode=$?
# Don't let the [OK] get stomped on.
echo
exit $retcode
